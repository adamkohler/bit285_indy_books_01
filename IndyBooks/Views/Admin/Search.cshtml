@model IndyBooks.ViewModels.SearchViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Search";
}
<h3>Find Books</h3>
<form asp-action="Search" asp-controller="Admin">
    <div>
        Title to Find: <input asp-for="Title" />
    </div>
    <!-- TODO: Add fields needed for seraching -->
	<div>
		Author Last Name: <input asp-for="LastName" />
	</div>
	<div>
		Min Price: <input asp-for="minPrice" />
	</div>
	<div>
		Max Price: <input asp-for="maxPrice" />
	</div>
    <div>
        <input type="submit" value="Search"/>
    </div>
</form>
